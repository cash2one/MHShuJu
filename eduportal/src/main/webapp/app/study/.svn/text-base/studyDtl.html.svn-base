var old_back = mui.back;
mui.back = function(){
  var cwebview = plus.webview.getWebviewById('billConfirm-sub');
  if(cwebview){
    var self = plus.webview.currentWebview();
    self.remove(cwebview);
    cwebview.close();
  }
  old_back();
}

